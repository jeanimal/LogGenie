# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/loggenie

# Session Security
SESSION_SECRET=change-this-to-a-secure-random-key-in-production

# Replit Auth Configuration (for Replit deployment)
REPLIT_DOMAINS=your-repl-domain.replit.app
